package strings;

public class Count_Words_In_A_Given_String {

	public static void main(String[] args) {
		System.out.println(count("sdfsa sadf asdf "));
	}
	
	public static int count(String string) {
		int index = 0;
		int count;
		if (check(string.charAt(0))) count = -1;
		else count = 0;
		while (index < string.length()) {
			if (check(string.charAt(index))) {
				count++;
				index++;
				System.out.println(index);
				while ((index < string.length()) && (check(string.charAt(index)))) {
					index++;
				}
			}
		}
		return count;
	}
	
	public static boolean check(char character) {
		if ((character == ' ') || (character == '\t') || (character == '\n')) return true;
		return false;
	}
}
