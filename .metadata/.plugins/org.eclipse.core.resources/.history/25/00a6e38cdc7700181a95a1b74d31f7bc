package Largest_Contiguous_Subarray_Problem;

import java.util.Arrays;

public class Largest_Sum_Contiguous_Subarray {
	public static void main(String[] args) {
		
	}
	
	public static int memoization(int[] arr) {
		int[] memo1 = arr.clone();
		int[] memo2 = new int[arr.length];
		Arrays.fill(memo2, 1);
		
		int max1 = 0, max2 = 0;
		
		for (int i = 1; i < arr.length; i++) {
			if (memo1[i] <= memo1[i] + memo1[i-1]) {
				memo1[i] = memo1[i] + memo1[i-1];
				memo2[i] = memo2[i - 1] + 1;
			}
			if (memo1[i] > max1) {
				max1 = memo1[i];
				max2 = memo2[i];
			}
		}
		return max2;
	}
}
