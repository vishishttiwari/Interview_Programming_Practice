package searching;

import util.Node;

public class Find_Inorder_Successor {

	public static void main(String[] args) {
		Node node = new Node(6);
		node.left = new Node(-13);
		node.left.right = new Node(-11);
		
		node.right = new Node(14);
		node.right.left = new Node(13);
		node.right.right = new Node(15);
		node.right.left = new Node(13);
		node.right.left.left = new Node(7);
		
		System.out.println(inOrderSuccessor(node, node.left.right).value);
	}
	
	static Node successor;
	static boolean found;
	private static Node inOrderSuccessor(Node root, Node node) {
		successor = null;
		found = false;
		inOrder(root, node);
		return successor;
	}
	
	private static void inOrder(Node root, Node node) {
		if (root == null) return;
		inOrder(root.left, node);
		if (found) {
			successor = root;
			found = false;
		}
		if (root.value == node.value) found = true;
		inOrder(root.right, node);
	}
}
