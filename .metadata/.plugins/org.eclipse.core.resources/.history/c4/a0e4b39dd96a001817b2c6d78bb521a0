package conversion;

import util.Node;
import util.Print;

public class Remove_Nodes_Of_Binary_Search_Tree_Outside_Given_Range {
	public static void main(String[] args) {
		Node node = new Node(6);
		node.left = new Node(-13);
		node.left.right = new Node(-8);
		
		node.right = new Node(14);
		node.right.left = new Node(13);
		node.right.right = new Node(15);
		node.right.left = new Node(13);
		node.right.left.left = new Node(7);
		
		remove(node, -10, 13);
		Print.print(node);
	}
	
	public static Node remove(Node node, int min, int max) {
		if (node == null) return null;
		if (node.value < min) {
			System.out.println("Right: " + node.value);
			return node.right;
			//remove(node, min, max);
		}
		if (node.value > min) {
			System.out.println("Left: " + node.value);
			return node.left;
			//remove(node, min, max);
		}
		node.left = remove(node.left, min, max);
		node.right = remove(node.right, min, max);
		return node;
	}
}
